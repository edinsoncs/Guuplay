doctype html
html(lang='es')
  head
    meta(charset='UTF-8')
    title GuuPlay
    link(rel='stylesheet', href='../stylesheets/normalize.css')
    link(rel='stylesheet', href='../stylesheets/estilos.css')
    script(src='http://code.jquery.com/jquery-2.1.4.min.js')
    script(src='../javascripts/app.js')
    script(src='../javascripts/web.js')
  body.bgArtist

    header.header(data-role='header')
      .cont--header
        figure.logo
          h1.title GuuPlay
        form.formH(method='get')
          fieldset.content--Fieldset
            input.searchWeb(type='search', placeholder='busca su siguiente musica', name='buscador')
        ul.user
          li.user--List.jsOn
            i(class="el el-torso")
            | Conectate
          li.user--List
            i(class="el el-cloud-alt")
            | Subir
          li.user--List.jsTwoo
            i(class="el el-unlock-alt")
            | Registro
          li.user--List
            i(class="el el-bell")
            | Novedades
          form.user--Login
            fieldset.user--Login--Cont
              fieldset.user--Login--Fieldset
                label.user--Login--TT Ingrese su usuario
                input(data-user="name", type='text', name='nameLogin', placeholder='yuusong')
              fieldset.user--Login--Fieldset
                label.user--Login--TT Ingrese su clave
                input(data-user="pass", type='password', name="passwordLogin", placeholder='********')
              fieldset.user--Login--Fieldset
                input(type="submit" value="Iniciar Session")
              fieldset.user--Login--Fieldset.jsError
              fieldset.user--Login--Fieldset
                a(class="reseteoPassword", href="#", target="_blank",) Recuperar Contrase√±a
              
    section.slide
      ul.slide--Ul
        li.List
          .cont--Img
      div.artistas--Details
        div.detalles
    main
      section.cont
          header.cont--Header
          section.cont--Main
            section.cont--Playlist
            aside.cont--Aside
              article.cont--Aside--Article
                header.Article--Header
                  ul.ul--Cont
                    li.list
                      a(class="LinkSocial twBtn", href="#")
                        i(class="el el-twitter")
                    li.list
                      a(class="LinkSocial fbBtn", href="#")
                        i(class="el el-facebook")
                  fieldset.fieldset--Shared
                    input(class="inputSharedLink", type="text")
              form.cont--Aside--Chat
                fieldset.chat--Fieldset
                 input(type="text", class="sendMessage")
    section.contReproductor
        div.repro
          div.reproCenter
            div.reproCenter--Cont
              div.reproCenter--Prev
                i(class="el el-backward previusIcon")
              div.reproCenter--Play
                i(class="el el-play playIcon")
              div.reproCenter--Next
                i(class="el el-forward nextIcon")

            div.reproCenter--Options
                figure.reproIz--Cover.u--Margen
                  img(src="https://i1.sndcdn.com/artworks-000032246604-kc2f05-large.jpg", class="playCover", alt="") 
                section.reproIz--Playing
                  header.Playing--Titles
                    h4.title Time to pretend by MGMT
                  div.Playing--Options
                    div.Options--TimeGoMusic
                      span.titles 00:18
                    div.Options--ProgressMusic
                    div.Options--TimeFinishMusic
                      span.titles 05:28

    script
